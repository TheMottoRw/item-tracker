<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="2dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Admin"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:textColor="@color/light_blue"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-medium"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:cursorVisible="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="30dp"
                android:textSize="15sp"
                android:textColor="@color/light_blue"
                android:hint="Enter Admin name "
                android:paddingLeft="@dimen/padding"
                android:textColorHint="@color/grey_font"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-medium"



                />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:inputType="phone"
                android:cursorVisible="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="30dp"
                android:textSize="15sp"
                android:textColor="@color/light_blue"
                android:hint="Enter Admin phone number "
                android:paddingLeft="@dimen/padding"
                android:textColorHint="@color/grey_font"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-medium"

                />

            <Spinner
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="30dp"
                android:entries="@array/category"
                android:textSize="15dp"
                android:textColor="@color/light_blue"

                />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="National id"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-medium"
            />

            <EditText
                android:id="@+id/national"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:inputType="phone"
                android:cursorVisible="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="20dp"
                android:textSize="15sp"
                android:textColor="@color/light_blue"
                android:hint="Enter Admin national id "
                android:paddingLeft="@dimen/padding"
                android:textColorHint="@color/grey_font"

                />
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sector"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-medium"

            />

            <EditText
                android:id="@+id/sector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="phone"
                android:cursorVisible="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="30dp"
                android:textSize="15sp"
                android:textColor="@color/light_blue"
                android:hint="Enter Admin sector"
                android:paddingLeft="@dimen/padding"
                android:textColorHint="@color/grey_font"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-medium"

                />

            <EditText
                android:id="@+id/adminpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:cursorVisible="true"
                app:passwordToggleEnabled="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="30dp"
                android:textSize="15dp"
                android:textColor="@color/light_blue"
                android:hint="Enter your password "
                android:textColorHint="@color/grey_font"
                android:paddingLeft="@dimen/padding"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done by"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-medium"

                />

            <EditText
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="phone"
                android:cursorVisible="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="30dp"
                android:textSize="15sp"
                android:textColor="@color/light_blue"
                android:hint="Enter your name (Super Admin name)"
                android:paddingLeft="@dimen/padding"
                android:textColorHint="@color/grey_font"

                />

            <Button
                android:id="@+id/registerAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Register"
                android:layout_marginTop="30dp"
                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>